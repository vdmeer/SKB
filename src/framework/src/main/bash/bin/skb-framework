##
## The SKB Framework Application
##
## @author     Sven van der Meer <vdmeer.sven@mykolab.com>
## @version    v0.0.0
##


##
## DO NOT CHANGE CODE BELOW, unless you know what you are doing
##

if [[ -z ${__FW_LOADER_FLAVOR:-} ]]; then
    export __FW_LOADER_FLAVOR="SF"
    export __FW_LOADER_SCRIPTNAME="$0"
    export __FW_LOADER_APPNAME="SKB Framework"

    if [[ -z ${SF_HOME} ]]; then
        SF_HOME=$(readlink -f $0)
        SF_HOME=${SF_HOME%/*}
        SF_HOME=${SF_HOME%/*}
        export SF_HOME
    fi
fi

if [[ -z ${FW_HOME} ]]; then
    LOADER_PATH=$(readlink -f $0)
    LOADER_PATH=${LOADER_PATH%/*}
else
    LOADER_PATH=$FW_HOME/bin
fi
$LOADER_PATH/loader/loader.sh $*
__errno=$?
exit $__errno
